- extends "base.haml"


- block body
    .wrapper.wrapper-content
        #modal_new.ibox.float-e-margins
            .ibox-content
                - for k,v0 in menu
                    
                    .row
                        .col-xs-2
                        .col-xs-5
                            #{v0.name}
                        .col-xs-1
                            %input(type="checkbox")
                    - if v0.list
                        - for k,v1 in v0.list
                            .row
                                .col-xs-3
                                    
                                .col-xs-4
                                    #{v1.name}
                                .col-xs-1
                                    %input(type="checkbox")
                            - if v1.list
                                - for k,v2 in v1.list
                                    .row
                                        .col-xs-4
                                            
                                        .col-xs-3
                                            #{v2.name}
                                        .col-xs-1
                                            %input(type="checkbox")
                            .block(style="height:20px")
                    .block(style="height:50px")
    

- block otherScript
    1