- extends "base.haml"


- block body
    :css
        .changeIt:hover{
            background-color:#f0f0f0
        }
        i.fa{font-size:22px}
    .wrapper.wrapper-content
        .row
            .col-sm-12
                .ibox.float-e-margins
                    .ibox-content
                        .form-horizontal
                            .form-group
                                
                                %label.col-sm-1.control-label #{lang.school.school}
                                .col-sm-2
