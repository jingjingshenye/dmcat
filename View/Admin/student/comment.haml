                                    %i.fa.fa-star-o.cp
                                    %i.fa.fa-star-o.cp
                                    %i.fa.fa-star-o.cp
                                    %i.fa.fa-star-o.cp
                        .form-group
                            %label.col-sm-3.control-label
                                饮食能力/Eating
                            .col-sm-9
                                %p(data-name="eating")
                                    %i.fa.fa-star-o.cp
                                    %i.fa.fa-star-o.cp
                                    %i.fa.fa-star-o.cp
                                    %i.fa.fa-star-o.cp
                                    %i.fa.fa-star-o.cp
                        .form-group
                            %label.col-sm-3.control-label
                                生活能力/Life
                            .col-sm-9
                                %p(data-name="life")
                                    %i.fa.fa-star-o.cp
                                    %i.fa.fa-star-o.cp
                                    %i.fa.fa-star-o.cp
                                    %i.fa.fa-star-o.cp
                                    %i.fa.fa-star-o.cp
                        .form-group
                            %label.col-sm-3.control-label 评论/Comment
                            .col-sm-9
                                %textarea.form-control(name="comment" style="resize:vertical" rows="5")
