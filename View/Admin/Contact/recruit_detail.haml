- extends "base.haml"


- block body
    
    .wrapper.wrapper-content
        .row
            .col-sm-12
                #modal_new.ibox.float-e-margins
                    .ibox-title
                        %h3 德汇招聘
                    .ibox-content
                        %form.form-horizontal.animated(method="post")
                            %input.form-control(type="hidden" name="id")
                            .form-group
                                %label.col-sm-2.control-label 名称
                                .col-sm-3
                                    %input.form-control(name="name")
                            .form-group
                                %label.col-sm-2.control-label 名称(EN)
                                .col-sm-3
                                    %input.form-control(name="name_en")
                            .form-group
                                %label.col-sm-2.control-label 地址
                                .col-sm-3
                                    %input.form-control(name="address")
                            .form-group
                                %label.col-sm-2.control-label 地址(EN)
                                .col-sm-3
                                    %input.form-control(name="address_en")
                            .form-group
                                %label.col-sm-2.control-label 工作经验
                                .col-sm-3
                                    %input.form-control(name="experience")
                            .form-group
                                %label.col-sm-2.control-label 工作经验(EN)
                                .col-sm-3
                                    %input.form-control(name="experience_en")
                            .form-group
                                %label.col-sm-2.control-label 发布时间
                                .col-sm-2
                                    %input.form-control(name="time" value="")
                            .form-group
                                %label.col-sm-2.control-label 人数
                                .col-sm-2
                                    %input.form-control(name="num" value="0")
                            .form-group
                                %label.col-sm-2.control-label 学历
                                .col-sm-3
                                    %input.form-control(name="edu")
                            .form-group
                                %label.col-sm-2.control-label 学历(EN)
                                .col-sm-3
                                    %input.form-control(name="edu_en")
                            .form-group
                                %label.col-sm-2.control-label 类型(全职/兼职)
                                .col-sm-3
                                    %input.form-control(name="typein")
                            .form-group
                                %label.col-sm-2.control-label 类型(EN)
                                .col-sm-3
                                    %input.form-control(name="typein_en")
                            .form-group
                                %label.col-sm-2.control-label 分类
                                .col-sm-6
                                    %select.ajax.form-control(name="type" data-list="/contact/recruit_type_lists")
                            

                            .form-group
                                %label.col-sm-2.control-label 详情
                                .col-sm-9
                                    .summernote(data-name="content")
                            .form-group
                                %label.col-sm-2.control-label 详情(EN)
                                .col-sm-9
                                    .summernote(data-name="content_en")
                        .ibox-title
                            %a.btn.btn-default(href="javascript:gotoTag('contact/recruit',1)") Close
                            %button.btn.btn-primary.save(type="button") Save
    
- block otherCss
    %link(href="/css/plugins/summernote/summernote.css" rel="stylesheet")
    %link(href="/css/plugins/summernote/summernote-bs3.css" rel="stylesheet")

                        



- block otherScript
    %script(src="/js/plugins/summernote/summernote.min.js")
    %script(src="/js/plugins/summernote/summernote-zh-CN.js")
    :javascript
        $(function(j){
            upPic('/staff/upPic','.picFile','input[name="pic"]','.pic_img');
            j('.pic_img').click(function(){
                j('.picFile').click();
            })
            var su = j(".summernote").summernote({
                toolbar: [
                    ['style', ['style']],
                    ['style', ['bold', 'italic', 'underline', 'clear']],
                    ['fontname',['fontname']],
                    ['fontsize', ['fontsize']],
                    ['color', ['color']],
                    ['height', ['height']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['e',['picture','link']],
                    ['o',['codeview']],
                ],
                height: 300,
                minHeight: 300,
                maxHeight: null,
                focus: true,
                lang:"zh-CN",
                callbacks: {
                    onImageUpload: function(files) {
                        curl('/staff/upPic',packFormData(files),function(d){
                            var imgNode = new Image
                            imgNode.src = d.fpath
                            su.summernote('insertNode', imgNode);
                        },1);
                    }
                }
            })
            gr.saveAfter = function(){
                location = $('.ibox-title a.btn.btn-default').attr('href')
            }
            cget('/contact/recruit_get','#{id}','/contact/recruit_upd',1);
            // gr.flesh = function(){}
            // $('.click2edit').summernote('code');

        });


    
        