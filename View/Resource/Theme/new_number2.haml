- extends "base.haml"



- block siteInfo
  %title = g.title
  %meta(name="keywords" content="节目单,动漫,动画")


- block css
  / %link(rel="stylesheet" href="/css/week2.css?1")

- block js
  %script(src="/js/week2.js")


- block body
  :css
    a{color:inherit}
    .theme_list{margin-top:60px;padding-bottom:300px}
    .theme_title{
      background-color: #585;
      color:white;
      padding:20px 0;
    }
    .theme_block{
      background-color: white;
      color:#333;
      padding:20px 0;
    }
    .theme_block:nth-child(even) {
        background-color: antiquewhite;
    }
    .theme_block:hover{
      background-color:sienna;
    }
    .theme_block a{
      color:#333;
    }
    .theme_block p{
      margin:auto
    }
    .theme_block a::before{
      content:'[';
    }
    .theme_block a::after{
      content:']';
    }
    .theme_block a::before,.theme_block a::after{
      left:0px;
      color:#333;
      opacity:0;
      position:relative;
      font-size:12px;
      transition: all .3s;-moz-transition: all .3s;-webkit-transition: all .3s;-o-transition: all .3s
    }
    .theme_block:hover p,.theme_block:hover a{
      color:white;
    }
    .theme_block a:hover::before{
      opacity:1;
      left:-10px;
      color:white;
    }
    .theme_block a:hover::after{
      opacity:1;
      left:10px;
      color:white;
    }

    

  .container.theme_list
    .row.theme_title.hidden-xs
      .col-sm-1
        %strong ID
      .col-sm-2
        %strong SITE
      .col-sm-4
        %strong NAME
      .col-sm-3.tr
        %strong 日期
      .col-sm-2
        %strong
    - for r in list
      .row.theme_block.t
        .col-sm-1
          %p
            = r.id
        
        .col-sm-2
          %p
            = r.sname
        .col-sm-4
          %p
            = r.name
        .col-sm-3.tr
          %p
            = r.date
        .col-sm-2
          %p
            %a.t-bf(href="#{r.outlink}" target="_blank")
              查看
