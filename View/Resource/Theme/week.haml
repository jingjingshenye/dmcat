- extends "base.haml"



- block siteInfo
  %title #{g.title}
  %meta(name="keywords" content="#{g.keywords}")
  %meta(name="description" content="#{g.description}")


- block body
  :css
    #week{margin:20px}

  #week
    今日
    %br
    - for theme in today
      #{theme.name} | #{theme.date} | #{theme.last_number} | 
      %a(href="/lists/theme?id=#{theme.id}&new_number=1" target="_blank")
        查看
      %br
    %br
    这星期
    %br
    - for day in this_week
      - for theme in day
        #{theme.name} | #{theme.date} | #{theme.last_number}
        %a(href="/lists/theme?id="+theme.id+"&new_number=1")
          查看
        %br
    %br
    上星期<br>
    - for day in last_week
      - for theme in day
        #{theme.name} | #{theme.date} | #{theme.last_number}
        %a(href="/lists/theme?id="+theme.id+"&new_number=1")
          查看
        %br
    %br


  