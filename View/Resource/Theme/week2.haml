- extends "base.haml"



- block siteInfo
  %title 4MOEの节目单
  %meta(name="keywords" content="节目单,动漫,动画")


- block css
  / %link(rel="stylesheet" href="/css/week2.css?1")

- block js
  %script(src="/js/week2.js")


- block body
  :css
    a{color:inherit}
    .theme_list{margin-top:60px;padding-bottom:300px}
    .theme_title{
      background-color: #585;
      color:white;
      padding:20px 0;
    }
    .theme_block{
      background-color: white;
      color:#333;
      padding:20px 0;
    }
    .theme_block:nth-child(even) {
        background-color: antiquewhite;
    }
    .theme_block:hover{
      background-color:sienna;
    }
    .theme_block a{
      color:#333;
    }
    .theme_block p{
      margin:auto
    }
    .theme_block a::before{
      content:'[';
    }
    .theme_block a::after{
      content:']';
    }
    .theme_block a::before,.theme_block a::after{
      left:0px;
      color:#333;
      opacity:0;
      position:relative;
      font-size:12px;
      transition: all .3s;-moz-transition: all .3s;-webkit-transition: all .3s;-o-transition: all .3s
    }
    .theme_block:hover p,.theme_block:hover a{
      color:white;
    }
    .theme_block a.t-bf:hover::before{
      opacity:1;
      left:-10px;
      color:white;
    }
    .theme_block a.t-bf:hover::after{
      opacity:1;
      left:10px;
      color:white;
    }

    

  .container.theme_list
    .row.theme_title
      .col-sm-4.hidden-xs
        %strong 名字
      .col-xs-10.hidden-sm.hidden-md.hidden-lg.tc
        %strong 名字
      .col-sm-1.col-xs-2.tc
        %strong 最新
      .col-sm-1.hidden-xs.tc
        %strong 资源
      .col-sm-3.tr.hidden-xs.hidden-sm
        %strong 日期
      .col-sm-2.hidden-xs.hidden-sm
        %strong 星期
      .col-sm-4.hidden-xs.hidden-md.hidden-lg.tc
        %strong 星期
      .col-sm-2.hidden-xs.col-md-1
        %strong
    - for theme in all
      .row.theme_block.t
        .col-sm-4.col-xs-10
          %p
            %a(href="/lists/new_number2?id=#{theme.id}")
              = theme.name
        
        .col-sm-1.col-xs-2.tc
          %p
            = theme.last_number
        .col-sm-1.hidden-xs.tc
          %p
            = theme.number
        .col-sm-3.tr.hidden-xs.hidden-sm
          %p
            = theme.date
        .col-md-2.hidden-xs.hidden-sm
          %p
            = theme.week
        .col-sm-4.tc.hidden-xs.hidden-md.hidden-lg
          %p
            = theme.week
        .hidden-xs.col-sm-2.col-md-1
          %p
            %a.t-bf(href="/lists/new_number2?id=#{theme.id}")
              查看
